<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_2mdp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/_3mdp"
    app:contentPadding="@dimen/_5mdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/orderIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: 39393934"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="02/11/2023" />
        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: mahmud@gmail.com"
            android:layout_below="@id/orderIdTV"/>

        <TextView
            android:id="@+id/orderAmountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount: $66.04"
            android:layout_below="@id/emailTV"/>
        <TextView
            android:id="@+id/statusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Progress"
            android:textColor="@color/background_theme"
            android:layout_below="@id/emailTV"
            android:layout_alignParentEnd="true"
           />


        <ImageButton
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next_gray" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>